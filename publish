#!/usr/bin/env bash

# Script for publishing https://github.com/partio-scout/kipa results
# @author ville.pekkinen@gmail.com, 2022

set -o errexit
set -o nounset

main() {

  if [[ $# -ne 2 ]]; then
    echo "Argument error!"
    echo "Usage, for example: ./publish 23 vihrea.html"
    exit 1
  fi  
  
  CLASS=$1
  FILENAME=$2
  TIMESTAMP=$(date)
  RESULT_REPO_DIR="/home/pekkine/kierikki-results"

  RESULT_URL="http://192.168.1.50/kipa/kierikki/tallenna/tulosta/tuloste/sarja/${CLASS}/"
  curl --verbose --fail --output "${RESULT_REPO_DIR}/${FILENAME}" "${RESULT_URL}"

  cd "${RESULT_REPO_DIR}"
 
  git add "${FILENAME}"

  if git commit -m "${TIMESTAMP}"; then
    git push
  fi
}

main "$@"